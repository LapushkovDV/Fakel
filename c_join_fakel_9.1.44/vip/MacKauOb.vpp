// макрос предназначен для таблиц у которых 1 поле
// для кау , по которым есть индекс
#declare UpdateOneKau(Tabl,Tbl,Kau, TablString, TablFieldString)
{
  var titlerep : string;
  titlerep := #TablString + ' по полю ' + #TablFieldString;
  m_tTimeBeg := Cur_Time;
  MSGstring := 'Обработка ' + #TablString + ' по полю ' + #TablFieldString + ' с индексом';
  ////////////////////////////////////////////////////////////////////////////////////////
  if (not NextVisual)
    if (NeedOrNoRunObBreak) ObBreak;

  if ((update visual 'Обработка таблицы #Tabl' #Tabl
       where ((    wKodTbl  == #Tabl.#Tbl
               and cKauFind == #Tabl.#Kau))
       set #Tabl.#Kau := cKauRepl) <> tsOk) MSGForm(#TablString, 0, 4);
}
#end

